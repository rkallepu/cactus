<!DOCTYPE html>
<html ng-app="rideshareApp">
<head>
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.css"/>
  <link rel='stylesheet' href='/stylesheets/style.css'/>
  <script src="jquery/dist/jquery.js"></script>
  <script src="bootstrap/dist/js/bootstrap.js"></script>
  <script src="/angular/angular.js"></script>
  <script src="/angular-route/angular-route.js"></script>
  <script src="/angular-ui-router/release/angular-ui-router.js"></script>

  <script src="/app/app.js"></script>
  <script src="app/mainIndex.js"></script>
  <script src="app/accounts/account.js"></script>
  <script src="app/home/home.js"></script>
  <script src="/app/home/filters.js"></script>
</head>
<body ng-controller="mainController">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <nav class="navbar navbar-default navbar-fixed-top">
            <h1 class="pull-left rideshare-style">Welcome to Ride Share..!</h1>
            <div class="pull-right">
              <a role="button" class="btn btn-default navbar-btn rideshare-style" href="#/register" ui-sref="register" ng-hide="show.Register">New User</a>
              <a role="button" class="btn btn-default navbar-btn rideshare-style" href="#/login" ui-sref="login" ng-hide="show.Login">Log In</a>
              <a role="button" class="btn btn-default navbar-btn rideshare-style" href="#/" ng-click="logout()" ng-hide="show.Logout">Log Out</a>
            </div>
        </nav>
        <div ui-view="viewA"></div>
      </div>
    </div>
  </div>
</body>
</html>
